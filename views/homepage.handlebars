<div class="card">
  <h5 class="card-header text-center fs-1" id="featmon">Featured Monsters</h5>
  <div class="card-body d-flex justify-content-center">
    {{#each features}}
    <section class="pt-5 px-5">
      <div class="col-12 col-6-md col-3-lg card" id="moncard">
        <img
          src="https://via.placeholder.com/400"
          class="card-img-top"
          alt="monster pic"
        />
        <div class="card-body">
          <h5 class="card-title">{{monster}}</h5>
          <p class="card-text">{{description}}</p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">{{character_type}}</li>
          <li class="list-group-item">{{weapons}}</li>
          <li class="list-group-item">{{health}}</li>
        </ul>
        <div class="card-body">
          <a href="#" class="card-link">Created by: </a>
        </div>
      </div>
    </section>
    {{/each}}
  </div>
</div>