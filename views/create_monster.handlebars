<div class="card">
  <h5 class="card-header text-center fs-1" id="featmon">Create A Monsters</h5>
  <div class="card-body d-flex justify-content-center">
    <form class="card col-5 d-flex justify-content-center">

      <div class="col-12 align-self-center p-3">
        <select
          class="form-select p-3 mb-3"
          aria-label="Default select example"
        >
          <option selected>Monster</option>
          <option value="1">Green Dragon</option>
          <option value="2">Hobgoblin</option>
          <option value="3">Stray Demon</option>
        </select>
        <select
          class="form-select p-3 mb-3"
          aria-label="Default select example"
        >
          <option selected>Type</option>
          <option value="1">Boss</option>
          <option value="2">MiniBoss</option>
          <option value="3">Normal</option>
        </select>
        <select
          class="form-select p-3 mb-3"
          aria-label="Default select example"
        >
          <option selected>Weapon</option>
          <option value="3">Unarmed</option>
          <option value="1">Gladius</option>
          <option value="2">Straight Sword</option>
          <option value="3">Fire Staff</option>
        </select>
        <div class="mb-3">
          <label for="exampleFormControlTextarea1" class="form-label">Enter a
            Description for your Monster</label>
          <textarea
            class="form-control"
            id="exampleFormControlTextarea1"
            rows="3"
          ></textarea>
        </div>
        <div class="input-group input-group-lg">
          <span class="input-group-text" id="inputGroup-sizing-lg">Monster
            Health</span>
          <input
            type="text"
            class="form-control"
            aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-lg"
            placeholder="Enter a number between 1-150"
          />
        </div>
        <div class="col-12 mt-4 text-center">
          <button class="btn btn-primary btn-lg" type="submit">Create Monster</button>
        </div>
      </div>
    </form>
  </div>
</div>