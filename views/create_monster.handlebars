<div class="card">
  <h5 class="card-header text-center fs-1" id="featmon">Create A Monster:</h5>
  <div class="card-body d-flex justify-content-center" id="createMonPage">
    <form class="card col-5 d-flex justify-content-center" id="createMonster">

      <div class="col-12 align-self-center p-3">
        <select class="form-select p-3 mb-3" aria-label="Default select example" id="monster">
          <option selected disabled value="">Monster</option>
          <option value="Green Dragon">Green Dragon</option>
          <option value="Hobgoblin">Hobgoblin</option>
          <option value="Stray Demon">Stray Demon</option>
          <option value="Fire Elemental">Fire Elemental</option>
          <option value="Ent">Ent</option>
        </select>
        <select class="form-select p-3 mb-3" aria-label="Default select example" id="type">
          <option selected disabled value="">Type</option>
          <option value="Boss">Boss</option>
          <option value="MiniBoss">MiniBoss</option>
          <option value="Normal">Normal</option>
        </select>
        <select class="form-select p-3 mb-3" aria-label="Default select example" id="weapon">
          <option selected disabled value="">Weapon</option>
          <option value="Unarmed">Unarmed</option>
          <option value="Gladius">Gladius</option>
          <option value="Straight Sword">Straight Sword</option>
          <option value="Fire Staff">Fire Staff</option>
        </select>
        <div class="mb-3">
          <label for="description" class="form-label">Enter a
            Description for your Monster</label>
          <textarea type="text" maxlength="150" class="form-control" id="description" rows="3"
            placeholder="max 150 characters"></textarea>
        </div>
        <div class="input-group input-group-lg">
          <span class="input-group-text" id="inputGroup-sizing-lg">Monster
            Health</span>
          <input type="text" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-lg" placeholder="Enter a number between 1-500" id="health" />
        </div>
        <div class="col-12 mt-4 text-center">
          <button class="btn btn-primary btn-lg" type="submit">Create Monster</button>
        </div>
      </div>
    </form>
  </div>
</div>

<script src="js/createMonster.js"></script>